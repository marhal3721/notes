<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>The coding standard for saas.</description>
    <!-- 应用代码文件夹 -->
    <file>app/Services/ElectronicsInvoice</file>

    <!-- 报告格式为完整 -->
    <arg name="report" value="full"/>
    <!-- 报告格式为简报 -->
    <!--<arg name="report" value="summary"/>-->
    <!-- 现实进度 -->
    <arg value="p"/>
    <!-- 让输出显示颜色,默认输出是无色 -->
    <arg value="-colors"/>
    <!-- 设定报告输出宽度,防止有些文件名字不能现实完全 -->
    <arg name="report-width" value="140"/>

    <!-- 代码标准为PSR12 -->
    <rule ref="PSR12"/>
